.container
  h1 {{course.title}}
  .row
    .col-md-6
      h3(ng-show="course.featured") Featured
      h3 Published on {{course.published | date}}

    .col-md-6
      .panel.panel-primary
        .panel-heading Tags
        .panel-body
          div(ng-repeat="tag in course.tags") {{tag}}
  // not implemented yet, was buggy w/o populations
  .panel.panel-primary
    .panel-heading Participants
    .panel-body
      div(ng-repeat="courseAppl in courseAppls") {{courseAppl.userFirst}} {{courseAppl.lastName}} signed: {{courseAppl.signed | date:'medium'}}
  .pull-right
    button.btn.btn-primary(ng-click="signToCourse()", ) Sign Up
    | &nbsp;
    button.btn.btn-primary(ng-click="showParticipants()", ) Show Participants