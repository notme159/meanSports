.container
  h1 {{course.title}}
  .row
    .col-md-6
      h3(ng-show="course.featured") Featured
      h3 Published on {{course.published | date}}

    .col-md-6
      .panel.panel-primary
        .panel-heading Tags
        .panel-body
          div(ng-repeat="tag in course.tags") {{tag}}
  .panel.panel-primary
    .panel-heading Participants
    .panel-body MockJohn Doe 11/11/2013
